<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gary.qwork.LoginActivity"
    android:background="@drawable/fondo">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="199dp"
        android:layout_height="154dp"
        app:srcCompat="@drawable/inicio"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/matriculaLogin"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Matricula"
        android:inputType="number"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508" />


    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:ems="10"
        android:maxLength="9"
        android:hint="Password"
        android:inputType="textPersonName"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/matriculaLogin"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/loginbtn2"
        android:layout_width="179dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:text="Iniciar sesion"
        android:textColor="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLogin"
        android:background="#4D82A1"/>

</android.support.constraint.ConstraintLayout>
